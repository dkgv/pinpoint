<Window x:Class="Pinpoint.Win.ViewControllers.ScreenCaptureOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pinpoint.Win.ViewControllers"
        mc:Ignorable="d"
        WindowStyle="None"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Loaded="ScreenshotOverlayWindow_OnLoaded"
        KeyDown="Window_KeyDown" 
        Background="#59000000"
        MouseUp="Window_MouseUp" 
        MouseDown="Window_MouseDown"
        MouseMove="Window_MouseMove"
        Cursor="Cross">
    <Canvas>
        <Border x:Name="BrdWrapper" Background="#4C0080FF"></Border>
    </Canvas>
</Window>
